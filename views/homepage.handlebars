<div>

    
    <div class='container-fluid blogPostsContainer'> 
        {{#each mappedBlogPosts}}
            <div class='blogPost'>
                <h2 class='blogTitle'>{{this.title}}</h2>
                <p class='blogContent'>{{this.content}}</p>
                <p>Posted by: {{this.user.name}} on {{this.date_created}} </p>
                <div class='blogComments'>

                    {{#each this.Comments}}
                        <p>{{this.comment}}</p>
                    {{/each}}

                </div>
            </div>
        {{/each}}
    </div>

</div>



<script src="./js/homepage.js"></script>